# ===========================================
# Bill Barta - Root Environment Configuration
# ===========================================
# Docker Compose and Redis Configuration

# Project Configuration
PROJECT_NAME=bill-barta

# Port Configuration
# These control the exposed ports for docker containers
SERVER_PORT=3000
SERVER_DEBUG_PORT=9091
CLIENT_PORT=5173

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=86400

# ===========================================
# Production/Coolify Environment Variables
# ===========================================
# These are required for production deployment

# DPDC API Configuration
DPDC_CLIENT_SECRET=your_dpdc_client_secret_here

# Electricity Credentials (JSON Array Format)
# Example: [{"username":"user1","password":"pass1","provider":"DPDC"},{"username":"user2","password":"pass2","provider":"NESCO"}]
ELECTRICITY_CREDENTIALS=[]

# Telegram Bot Configuration (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:5173
