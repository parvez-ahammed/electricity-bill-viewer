# ===========================================
# Bill Barta - Centralized Environment Configuration
# ===========================================
# All environment variables for server, client, and docker services
# Copy this file to .env and update with your values

# Project Configuration
PROJECT_NAME=bill-barta
NODE_ENV=development

# Server Configuration
PORT=3000
CLIENT_PORT=5173

# Redis Configuration (used by docker-compose and server)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=86400

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Client Configuration (Vite environment variables must start with VITE_)
VITE_BACKEND_API_PATH=http://localhost:3000/api/v1
VITE_ELECTRICITY_CREDENTIALS='[{"provider":"DPDC","username":"your_username","password":"your_password"},{"provider":"NESCO","username":"your_username","password":"your_password"}]'

# DPDC Provider Configuration
DPDC_CLIENT_SECRET=your_dpdc_client_secret

# Telegram Bot (Optional - for automated reports)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Optional: Enable request latency logging
ENABLE_LATENCY_LOGGER=false

# Electricity Credentials for Server/Telegram Reports (Optional - JSON format)
# Format: [{"provider":"DPDC","username":"xxx","password":"xxx"},{"provider":"NESCO","username":"xxx","password":"xxx"}]
ELECTRICITY_CREDENTIALS='[{"provider":"DPDC","username":"username1","password":"password1"},{"provider":"NESCO","username":"username2","password":"password2"}]'
