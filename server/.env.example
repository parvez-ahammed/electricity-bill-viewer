# ===========================================
# Bill Barta - Server Environment Configuration
# ===========================================

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# DPDC Provider Configuration
DPDC_CLIENT_SECRET=your_dpdc_client_secret

# Telegram Bot (Optional - for automated reports)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Optional: Enable request latency logging
ENABLE_LATENCY_LOGGER=false

# Electricity Credentials for Server/Telegram Reports (Optional - JSON format)
# Format: [{"provider":"DPDC","username":"xxx","password":"xxx"},{"provider":"NESCO","username":"xxx"}]
# Note: 
#   - DPDC requires both username and password
#   - NESCO only requires username (customer number), password is optional
#   - Username is always required for all providers
ELECTRICITY_CREDENTIALS='[{"provider":"DPDC","username":"username1","password":"password1"},{"provider":"NESCO","username":"customer_number"}]'
