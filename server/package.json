{
    "name": "bill-barta-backend",
    "version": "1.0.0",
    "description": "Electricity bill viewer backend - A service to fetch and monitor electricity account balances from DPDC and NESCO providers with Telegram notifications.",
    "main": "dist/index.js",
    "scripts": {
        "start:dev": "nodemon -L --watch src --exec ts-node -r tsconfig-paths/register --require src/index.ts",
        "build": "tsc && tsc-alias",
        "start": "node dist/index.js",
        "lint": "eslint . ",
        "format": "prettier --write \"src/**/*\"",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "@types/cheerio": "^0.22.35",
        "@types/express": "^5.0.0",
        "@types/express-rate-limit": "^5.1.3",
        "@types/helmet": "^0.0.48",
        "@types/jest": "^29.5.14",
        "@types/node-cron": "^3.0.11",
        "@types/winston": "^2.4.4",
        "eslint": "^9.19.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.3",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "prettier": "^3.4.2",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.23.0"
    },
    "dependencies": {
        "@types/redis": "^4.0.10",
        "axios": "^1.8.2",
        "cheerio": "^1.1.2",
        "compression": "^1.8.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-rate-limit": "^7.5.0",
        "helmet": "^8.0.0",
        "http-status": "^2.1.0",
        "inversify": "^7.5.0",
        "knex": "^3.1.0",
        "ms": "^2.1.3",
        "node-cron": "^4.2.1",
        "redis": "^5.8.3",
        "winston": "^3.17.0",
        "winston-loki": "^6.1.3",
        "xhr2": "^0.2.1",
        "yamljs": "^0.3.0",
        "zod": "^3.24.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testMatch": [
            "**/tests/**/*.test.ts"
        ],
        "moduleNameMapper": {
            "^@routes/(.*)$": "<rootDir>/src/routes/$1",
            "^@configs/(.*)$": "<rootDir>/src/configs/$1",
            "^@controllers/(.*)$": "<rootDir>/src/controllers/$1",
            "^@services/(.*)$": "<rootDir>/src/services/implementations/$1",
            "^@repositories/(.*)$": "<rootDir>/src/repositories/$1",
            "^@middlewares/(.*)$": "<rootDir>/src/middlewares/$1",
            "^@interfaces/(.*)$": "<rootDir>/src/interfaces/$1",
            "^@dtos/(.*)$": "<rootDir>/src/dtos/$1",
            "^@helpers/(.*)$": "<rootDir>/src/helpers/$1",
            "^@utility/(.*)$": "<rootDir>/src/utility/$1"
        }
    }
}
